<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_chats">

    <fragment
        android:id="@+id/navigation_chats"
        android:name="pro.inmost.android.visario.ui.screens.chats.ChatsFragment"
        tools:layout="@layout/fragment_chats" >
        <action
            android:id="@+id/action_navigation_chats_to_navigation_messages"
            app:destination="@id/navigation_messages" />
    </fragment>

    <fragment
        android:id="@+id/navigation_messages"
        android:name="pro.inmost.android.visario.ui.screens.chats.messages.MessagesFragment"
        tools:layout="@layout/fragment_messages">

        <argument
            android:name="channelName"
            app:argType="string" />
        <argument
            android:name="channelUrl"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/navigation_calls"
        android:name="pro.inmost.android.visario.ui.screens.calls.CallsFragment"
        tools:layout="@layout/fragment_calls" />

    <fragment
        android:id="@+id/navigation_contacts"
        android:name="pro.inmost.android.visario.ui.screens.contacts.ContactsFragment"
        tools:layout="@layout/fragment_contacts" >
        <action
            android:id="@+id/action_navigation_contacts_to_navigation_contacts_search"
            app:destination="@id/navigation_contacts_search" />
        <action
            android:id="@+id/action_navigation_contacts_to_navigation_contact_detail"
            app:destination="@id/navigation_contact_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_contact_detail"
        android:name="pro.inmost.android.visario.ui.screens.contacts.detail.ContactDetailFragment"
        tools:layout="@layout/fragment_detail_contact">

        <argument
            android:name="contactId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/navigation_contacts_search"
        android:name="pro.inmost.android.visario.ui.screens.contacts.search.ContactsSearchFragment"
        tools:layout="@layout/fragment_contacts_search" >
        <action
            android:id="@+id/action_navigation_contacts_search_to_navigation_contact_detail"
            app:destination="@id/navigation_contact_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="pro.inmost.android.visario.ui.screens.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings" />
</navigation>
