<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/attach_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:padding="16dp">

            <ImageView
                android:layout_width="@dimen/bottom_sheet_meeting_menu_icons_size"
                android:layout_height="@dimen/bottom_sheet_meeting_menu_icons_size"
                app:tint="?attr/colorOnSurface"
                android:src="@drawable/ic_baseline_perm_media_24"
                tools:ignore="ContentDescription" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:textColor="?android:attr/textColorPrimary"
                android:text="@string/image"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/attach_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="@dimen/bottom_sheet_meeting_menu_icons_size"
                android:layout_height="@dimen/bottom_sheet_meeting_menu_icons_size"
                app:tint="?attr/colorOnSurface"
                android:src="@drawable/ic_baseline_file_24"
                tools:ignore="ContentDescription" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:textColor="?android:attr/textColorPrimary"
                android:text="@string/file"/>

        </LinearLayout>

    </LinearLayout>

</layout>


