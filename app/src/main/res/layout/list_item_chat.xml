<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="pro.inmost.android.visario.ui.screens.chats.ChatsViewModel" />
        <variable
            name="model"
            type="pro.inmost.android.visario.core.data.chimeapi.channels.model.Channel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> viewModel.onItemClick(model)}"
            android:layout_marginBottom="12dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/chat_icon"
                    android:layout_width="@dimen/chat_image_size"
                    android:layout_height="@dimen/chat_image_size"
                    android:layout_gravity="center"
                    app:shapeAppearance="@style/ChatCircleImage"
                    app:srcCompat="?attr/colorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    tools:text="CN"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_chat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_chat_name"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:text="@{model.name}"
                    tools:text="Chat name"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_last_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="@dimen/text_size_chat_last_message"
                    android:textColor="?android:attr/textColorSecondary"
                    android:text="@{model.lastMessageContent}"
                    tools:text="Last message"/>

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_time_of_last_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_chat_last_message"
                android:layout_marginEnd="16dp"
                android:textColor="?android:attr/textColorSecondary"
                android:text="@{model.lastMessageTime}"
                tools:text="12:00"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/dividerHorizontal"/>
    </LinearLayout>


</layout>