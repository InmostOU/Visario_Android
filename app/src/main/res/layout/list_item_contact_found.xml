<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="pro.inmost.android.visario.ui.screens.contacts.search.ContactsSearchViewModel" />
        <variable
            name="model"
            type="pro.inmost.android.visario.domain.entities.Contact" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/contact_icon"
                android:layout_width="@dimen/chat_image_size"
                android:layout_height="@dimen/chat_image_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_contact"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginStart="16dp"
                android:onClick="@{() -> viewModel.onItemClick(model)}"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_chat_name"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:text="@{model.username}"
                    tools:text="Contact Name"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_last_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="@dimen/text_size_chat_last_message"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="?android:attr/textColorSecondary"
                    android:text="@{model.online ? @string/online : @string/offline}"
                    tools:text="Online"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/button_add_contact"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:tint="?attr/colorOnSurface"
                android:padding="8dp"
                android:onClick="@{() -> viewModel.addContact(model)}"
                android:src="@drawable/ic_round_person_add_alt_1_24"
                android:contentDescription="@string/add_contact" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/dividerHorizontal"/>
    </LinearLayout>


</layout>