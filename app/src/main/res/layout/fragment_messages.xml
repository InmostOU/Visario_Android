<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="model"
            type="pro.inmost.android.visario.ui.entities.channel.ChannelUI" />
        <variable
            name="viewModel"
            type="pro.inmost.android.visario.ui.screens.channels.messages.MessagesViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{() -> viewModel.onChannelClick()}"
            tools:subtitle="@{@plurals/members(model.membersCount, model.membersCount)}"
            tools:title="Channel name"
            app:title="@{model.name}"
            app:titleTextColor="?attr/colorOnPrimary"
            app:navigationIconTint="?attr/colorOnPrimary"
            app:selectChannelMenu="@{model}"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24">

        </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/message_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="true"
            app:reverseLayout="true"
            app:layout_constraintTop_toBottomOf="@id/app_bar"
            app:layout_constraintBottom_toTopOf="@+id/sender_layout"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/list_item_message"/>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="@{viewModel.showProgressBar ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@id/app_bar"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sender_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:visibility="@{model.isMember ? View.VISIBLE : View.GONE}"
                android:background="?attr/colorSurface"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:id="@+id/edit_message_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    tools:visibility="gone"
                    android:visibility="@{viewModel.editMode ? View.VISIBLE : View.GONE}"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:tint="?attr/colorSecondary"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        android:onClick="@{() -> viewModel.cancelEdit()}"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_baseline_close_24"
                        android:contentDescription="@string/cancel_edit_mode" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginStart="16dp"
                        android:text="@string/edit_message"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/attachment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_marginStart="4dp"
                    android:gravity="center_vertical"
                    android:visibility="@{viewModel.attachment == null ? View.GONE : View.VISIBLE}"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:tint="?attr/colorSecondary"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        android:onClick="@{() -> viewModel.detachFile()}"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_baseline_close_24"
                        android:contentDescription="@string/cancel_edit_mode" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginStart="16dp"
                        android:text="@string/attachment_with_dots"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="16dp"
                        android:scaleType="fitCenter"
                        app:attach="@{viewModel.attachment}"
                        tools:src="@drawable/ic_baseline_perm_media_24"
                        tools:ignore="ContentDescription" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center"
                        app:tint="?attr/colorPrimary"
                        android:scaleType="fitCenter"
                        android:onClick="@{() -> viewModel.toggleEmojis()}"
                        android:src="@{viewModel.emojisOpened ? @drawable/ic_outline_keyboard_24 : @drawable/ic_outline_emoji_emotions_24}"
                        tools:src="@drawable/ic_outline_emoji_emotions_24"
                        android:contentDescription="@string/open_emojis" />

                    <com.vanniktech.emoji.EmojiEditText
                        android:id="@+id/edit_text_message"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="6"
                        android:hint="@string/message"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginStart="4dp"
                        android:text="@={viewModel.message}"
                        android:background="@null"
                        android:imeOptions="actionSend"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLines="6"
                        android:importantForAutofill="no" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center"
                        app:tint="?attr/colorPrimary"
                        android:scaleType="fitCenter"
                        android:onClick="@{() -> viewModel.onAttachFileClick()}"
                        android:src="@drawable/ic_baseline_attach_file_24"
                        android:contentDescription="@string/attach_file" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:padding="6dp"
                        android:visibility="@{viewModel.editMode ? View.GONE : View.VISIBLE}"
                        android:onClick="@{() -> viewModel.sendMessage()}"
                        android:enabled="@{viewModel.message.length() > 0 || viewModel.attachment != null}"
                        android:alpha="@{viewModel.message.length() > 0 || viewModel.attachment != null ? 1.0f : 0.5f}"
                        tools:enabled="false"
                        tools:visibility="visible"
                        app:tint="?attr/colorSecondary"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_baseline_send_24"/>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:padding="4dp"
                        tools:visibility="gone"
                        android:enabled="@{viewModel.message.length() > 0}"
                        android:visibility="@{viewModel.editMode ? View.VISIBLE : View.GONE}"
                        android:onClick="@{(view) -> viewModel.editDone(view)}"
                        app:tint="?attr/colorSecondary"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_baseline_done_24"/>

                </LinearLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/join_channel_button"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:backgroundTint="?attr/colorSurface"
                android:textColor="?attr/colorSecondary"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:onClick="@{(view) -> viewModel.joinChannel(view)}"
                android:visibility="@{model.isMember ? View.GONE : View.VISIBLE}"
                android:text="@string/join"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>